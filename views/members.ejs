<!DOCTYPE html>
<html lang="en">

<%- include("layouts/header")%>

<body>
  <!-- Navigation -->
  <%- include("layouts/navbar", { user: user})%>

  <!-- Masthead -->
  <header class="masthead text-white text-center">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-xl-9 mx-auto">
          <h1 class="mb-5">Welcome <%=user.name%></h1>  
        </div>
        <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
          <form class="search-form">
            <div class="form-row">
              <div class="col-12 col-md-9 mb-2 mb-md-0">
                <input type="text" class="form-control form-control-lg movie-input" placeholder="Search series here..." name="search-item">
              </div>
              <div class="col-12 col-md-3">
                <button type="submit" class="btn btn-block btn-lg btn-primary">Search!</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </header>

  <div class="row no-gutters render-movie-container">
    <div class="col-lg-6 text-white showcase-img render-movie-img"></div>
    <div class="col-lg-6 my-auto showcase-text render-movie">
    </div>
  </div>
  
  <div class="tvShows-seriesUUID-member">
    <% for (let i = 0; i < tvShows.length; i++) { %>
   <h2 class="mylist-seriesUUID"> <%=tvShows[i].seriesUUID%></h2>
    <% } %>
  </div>
  
  <%- include("layouts/popup")%>
  <%- include("layouts/testimonials")%>
  <%- include("layouts/footer")%>
  <%- include("layouts/scripts")%>

</body>

</html>
